@model Learner

@{
    ViewData["Title"] = "Delete";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2">
                
                <div class="form-group">
                    <label asp-for="FirstMidName" class="control-label"></label>
                    <input asp-for="FirstMidName" class="form-control" readonly />
                    <span asp-validation-for="FirstMidName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" readonly />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MajorID" class="control-label"></label>
                    <input asp-for="MajorID" class="form-control" readonly />
                    <span asp-validation-for="MajorID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-controller="Learner" asp-action="Delete" method="post" >
                        <input type="hidden" asp-for="LearnerID" />
                        <input type="submit" value="Confirm" class="btn btn-danger" style="float: right" />
                    </form>

                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

